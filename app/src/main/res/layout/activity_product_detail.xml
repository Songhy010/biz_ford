<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ActivityProductDetail">
    <include layout="@layout/top_menu_activity"/>
    <androidx.core.widget.NestedScrollView
        android:padding="@dimen/iv_height_10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/iv_height_5"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/iv_height_170" />

                <RelativeLayout
                    android:layout_marginTop="@dimen/iv_height_5"
                    android:padding="@dimen/iv_height_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/gallery"
                        android:textColor="@color/colorPrimary" />

                    <ImageView
                        android:id="@+id/iv_moreGallery"
                        android:layout_width="@dimen/iv_height_30"
                        android:layout_height="@dimen/iv_height_30"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/iv_height_8"
                        android:src="@drawable/iv_more" />
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycleGallery"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/iv_height_145" />

                <TextView
                    android:layout_marginLeft="@dimen/iv_height_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/iv_height_25"
                    android:text="@string/key"
                    android:textColor="@color/colorPrimary" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycleKey"
                    android:padding="@dimen/iv_height_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="@dimen/iv_height_20"
                    android:layout_marginLeft="@dimen/iv_height_5"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="@dimen/iv_height_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/iv_height_5"
                    app:cardElevation="@dimen/iv_height_4"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true">

                    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:autoPlay="true"
                        app:showFullScreenButton="true"
                        app:videoId="pzWrY_0Q3nA" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_marginTop="@dimen/iv_height_20"
                    android:layout_marginLeft="@dimen/iv_height_5"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:src="@drawable/img_nav_head"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/iv_height_200"/>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/shape_circle"
                        android:padding="@dimen/iv_height_5"
                        android:layout_width="@dimen/iv_height_30"
                        android:layout_height="@dimen/iv_height_30"/>
                    <ImageView
                        android:src="@drawable/shape_circle"
                        android:padding="@dimen/iv_height_5"
                        android:layout_width="@dimen/iv_height_30"
                        android:layout_height="@dimen/iv_height_30"/>
                    <ImageView
                        android:src="@drawable/shape_circle"
                        android:padding="@dimen/iv_height_5"
                        android:layout_width="@dimen/iv_height_30"
                        android:layout_height="@dimen/iv_height_30"/>
                    <ImageView
                        android:src="@drawable/shape_circle"
                        android:padding="@dimen/iv_height_5"
                        android:layout_width="@dimen/iv_height_30"
                        android:layout_height="@dimen/iv_height_30"/>
                    <ImageView
                        android:src="@drawable/shape_circle"
                        android:padding="@dimen/iv_height_5"
                        android:layout_width="@dimen/iv_height_30"
                        android:layout_height="@dimen/iv_height_30"/>
                    <ImageView
                        android:src="@drawable/shape_circle"
                        android:padding="@dimen/iv_height_5"
                        android:layout_width="@dimen/iv_height_30"
                        android:layout_height="@dimen/iv_height_30"/>
                    <ImageView
                        android:src="@drawable/shape_circle"
                        android:padding="@dimen/iv_height_5"
                        android:layout_width="@dimen/iv_height_30"
                        android:layout_height="@dimen/iv_height_30"/>
                    <ImageView
                        android:src="@drawable/shape_circle"
                        android:padding="@dimen/iv_height_5"
                        android:layout_width="@dimen/iv_height_30"
                        android:layout_height="@dimen/iv_height_30"/>
                    <ImageView
                        android:src="@drawable/shape_circle"
                        android:padding="@dimen/iv_height_5"
                        android:layout_width="@dimen/iv_height_30"
                        android:layout_height="@dimen/iv_height_30"/>
                    <ImageView
                        android:src="@drawable/shape_circle"
                        android:padding="@dimen/iv_height_5"
                        android:layout_width="@dimen/iv_height_30"
                        android:layout_height="@dimen/iv_height_30"/>

                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>