<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ActivityAccessoryDetail">
    <include layout="@layout/top_menu_activity"/>
    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/ivAccessory"
        android:src="@drawable/service_gradient"
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_height_200"/>
    <LinearLayout
        android:padding="@dimen/iv_height_10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvKmName"
            android:layout_marginTop="@dimen/iv_height_15"
            android:text="@string/app_name"
            android:textSize="@dimen/text_size_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvEnName"
            android:layout_marginTop="@dimen/iv_height_10"
            android:text="@string/app_name"
            android:textSize="@dimen/text_size_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_marginTop="@dimen/iv_height_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvP"
                android:text="@string/prices"
                android:textSize="@dimen/text_size_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="@dimen/iv_height_10"
                android:layout_alignTop="@id/tvP"
                android:layout_toEndOf="@id/tvP"
                android:id="@+id/tvPrice"
                android:text="@string/prices"
                android:textSize="@dimen/text_size_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/iv_height_15"
                android:layout_below="@+id/tvP"
                android:text="@string/code"
                android:textSize="@dimen/text_size_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/iv_height_15"
                android:layout_below="@+id/tvP"
                android:text="@string/code"
                android:textSize="@dimen/text_size_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/iv_height_15"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="@dimen/iv_height_10"
                android:layout_below="@id/tvPrice"
                android:layout_toEndOf="@id/tvP"
                android:id="@+id/tvCode"
                android:text="@string/prices"
                android:textSize="@dimen/text_size_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_marginTop="@dimen/iv_height_20"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="@dimen/iv_height_3"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginRight="@dimen/iv_height_20"
                    android:tint="@color/white"
                    android:padding="@dimen/iv_height_5"
                    android:src="@drawable/ic_phone"
                    android:layout_width="@dimen/iv_height_35"
                    android:layout_height="@dimen/iv_height_35"/>
                <TextView
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/white"
                    android:text="017 439 909"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>