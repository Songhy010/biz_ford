<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/iv_height_10"
    android:id="@+id/linearMileage"
    android:layout_width="match_parent"
    android:layout_height="@dimen/iv_height_40">

    <ImageView
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:padding="@dimen/iv_height_2"
        android:src="@drawable/shape_circle"
        android:layout_width="@dimen/iv_height_10"
        android:layout_height="@dimen/iv_height_10" />

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/tvMileage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/iv_height_25"
        android:text="@string/app_name"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_small" />

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_height_1"
        android:layout_marginLeft="@dimen/iv_height_25"
        android:background="@color/grey_4" />
</RelativeLayout>