<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvPlace"
        android:layout_marginTop="@dimen/iv_height_10"
        android:layout_marginLeft="@dimen/iv_height_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_normal" />
    <TextView
        android:id="@+id/tvAddress"
        android:lineSpacingExtra="@dimen/iv_height_5"
        android:layout_alignLeft="@id/tvPlace"
        android:layout_marginTop="@dimen/iv_height_10"
        android:layout_below="@+id/tvPlace"
        android:text="@string/app_name"
        android:textSize="@dimen/text_size_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginTop="@dimen/iv_height_10"
        android:layout_below="@+id/tvAddress"
        android:background="@color/grey_4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_height_1"/>

</RelativeLayout>